<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/miImagen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/cuenta"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">


            <EditText
                android:id="@+id/cuenta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresa el total de la cuenta"
                android:inputType="numberDecimal"
                android:padding="10dp" />


            <RadioGroup
                android:id="@+id/grupoPropina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <RadioButton
                    android:id="@+id/opcion5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5%" />

                <RadioButton
                    android:id="@+id/opcion10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10%" />

                <RadioButton
                    android:id="@+id/opcion15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15%" />
            </RadioGroup>


            <Button
                android:id="@+id/boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcular cuenta total"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>